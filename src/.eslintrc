{
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error",
        "react/prop-types": "error",
        "react/require-default-props": "error",
        "symbol-description": "error"
    },
    "globals": {
        "Promise": true,
        "Symbol": true
    }
  }
  